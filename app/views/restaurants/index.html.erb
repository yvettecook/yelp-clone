<% if @restaurants.any? %>
	<% @restaurants.each do |restaurant| %>
		<%= link_to "#{restaurant.name}", restaurant_path(restaurant) %>
		<%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>
	<% end %>
<% else %>
	No restaurants yet!
<% end %>

<a href='/restaurants/new'>Add a restaurant</a>
